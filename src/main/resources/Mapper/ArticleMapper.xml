<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bitzblogsystem.Mapper.ArticleMapper">

    <select id="getArtCountByUid" resultType="Integer">
        select count(*) from articleinfo where uid=#{uid}
    </select>

    <select id="getList" resultType="com.example.bitzblogsystem.Entity.ArticleInfo">
        select * from articleinfo where uid=#{uid}
    </select>

    <delete id="delArt">
        delete from articleinfo where id=#{id} and uid=#{uid}
    </delete>
</mapper>